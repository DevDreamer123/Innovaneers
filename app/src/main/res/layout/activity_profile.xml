<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/mettalic_white"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:background="@drawable/contactinno"/>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/primary"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@color/primary"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone No"
                    android:drawablePadding="@dimen/_5ssp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:padding="@dimen/_5ssp"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_15ssp"
                    android:textColor="@color/primary"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text="+91 9654226678"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@color/primary"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email Id"
                    android:drawablePadding="@dimen/_5ssp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:padding="@dimen/_5ssp"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_15ssp"
                    android:textColor="@color/primary"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text="info@innovaneers.in"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@color/primary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Office Address"
                    android:drawablePadding="@dimen/_5ssp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:padding="@dimen/_5ssp"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_15ssp"
                    android:textColor="@color/primary"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:justificationMode="inter_word"
                    android:textAlignment="center"
                    android:layout_marginRight="@dimen/_7ssp"
                    android:text="Shop No. 3 Neelkanth Market Ramadevi Kanpur \n UP"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@color/primary"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/twitter"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@drawable/twitter"
                        android:layout_marginBottom="@dimen/_20sdp" />
                    <ImageButton
                        android:id="@+id/insta"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/insta"
                        android:layout_marginBottom="@dimen/_20sdp" />
                    <ImageButton
                        android:id="@+id/skyp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/skyp"
                        android:layout_marginBottom="@dimen/_20sdp" />
                    <ImageButton
                        android:id="@+id/linkdin"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/linkdin"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_20sdp" />
                    <ImageButton
                        android:id="@+id/fb3"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/fb2"
                        android:layout_marginBottom="@dimen/_20sdp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>


</ScrollView>