<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/projectLayout"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    app:cardElevation="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/baseline_approval_24"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_light_color"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

    <TextView
        android:id="@+id/titlePjt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/dateshowPjt"
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:text="12/12/23"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:textSize="@dimen/_11sdp"
                    />
            </LinearLayout>

    <TextView
        android:id="@+id/nameshowPjt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/black"
       />



<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">

    <TextView
        android:id="@+id/desshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:maxEms="15"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_11sdp" />

    </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>