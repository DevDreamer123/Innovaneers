<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mettalic_white"
    tools:context=".ProjectFormActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/primary"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_height="@dimen/_200sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_40sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/innovaneers"
                                android:background="@color/white"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="New Project"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold"
                            android:gravity="right"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:textColor="@color/white"/>
                    </LinearLayout>



                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardElevation="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_80sdp"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginRight="@dimen/_10ssp"
                    >
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit..."
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColorHint="@color/black"
                                app:boxStrokeWidth="0dp"
                                android:backgroundTint="#FAFAFA"
                                app:boxBackgroundColor="#FAFAFA"
                                app:hintTextColor="@color/black"
                                app:boxStrokeColor="@color/primary"
                                android:hint="Client Id">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:singleLine="true"
                                    android:id="@+id/idClient"
                                    android:textColorHint="@color/black"
                                    android:textColor="@color/color_grey"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColorHint="@color/black"
                                app:boxStrokeWidth="0dp"
                                android:backgroundTint="#FAFAFA"
                                app:boxBackgroundColor="#FAFAFA"
                                app:hintTextColor="@color/black"
                                app:boxStrokeColor="@color/primary"
                                android:hint="Client Name">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:singleLine="true"
                                    android:id="@+id/nameClient"
                                    android:textColorHint="@color/black"
                                    android:textColor="@color/color_grey"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColorHint="@color/black"
                                app:boxStrokeWidth="0dp"
                                android:backgroundTint="#FAFAFA"
                                app:boxBackgroundColor="#FAFAFA"
                                app:hintTextColor="@color/black"
                                app:boxStrokeColor="@color/primary"
                                android:hint="Client email id">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:singleLine="true"
                                    android:id="@+id/emailClient"
                                    android:textColorHint="@color/black"
                                    android:textColor="@color/color_grey"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColorHint="@color/black"
                                app:boxStrokeWidth="0dp"
                                android:backgroundTint="#FAFAFA"
                                app:boxBackgroundColor="#FAFAFA"
                                app:hintTextColor="@color/black"
                                app:boxStrokeColor="@color/primary"
                                android:hint="Client Mobile no">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:singleLine="true"
                                    android:id="@+id/mobileClient"
                                    android:textColorHint="@color/black"
                                    android:textColor="@color/color_grey"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColorHint="@color/black"
                                app:boxStrokeWidth="0dp"
                                android:backgroundTint="#FAFAFA"
                                app:boxBackgroundColor="#FAFAFA"
                                app:hintTextColor="@color/black"
                                app:boxStrokeColor="@color/primary"
                                android:hint=" Enter Address">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:singleLine="true"
                                    android:id="@+id/addressClient"
                                    android:textColorHint="@color/black"
                                    android:textColor="@color/color_grey"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColorHint="@color/black"
                                app:boxStrokeWidth="0dp"
                                android:backgroundTint="#FAFAFA"
                                app:boxBackgroundColor="#FAFAFA"
                                app:hintTextColor="@color/black"
                                app:boxStrokeColor="@color/primary"
                                android:hint=" City">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:singleLine="true"
                                    android:id="@+id/cityClient"
                                    android:textColorHint="@color/black"
                                    android:textColor="@color/color_grey"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColorHint="@color/black"
                                app:boxStrokeWidth="0dp"
                                android:backgroundTint="#FAFAFA"
                                app:boxBackgroundColor="#FAFAFA"
                                app:hintTextColor="@color/black"
                                app:boxStrokeColor="@color/primary"
                                android:hint="Enter Project Title">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:singleLine="true"
                                    android:id="@+id/titleClient"
                                    android:textColorHint="@color/black"
                                    android:textColor="@color/color_grey"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColorHint="@color/black"
                                app:boxStrokeWidth="0dp"
                                android:backgroundTint="#FAFAFA"
                                app:boxBackgroundColor="#FAFAFA"
                                app:hintTextColor="@color/black"
                                app:boxStrokeColor="@color/primary"
                                android:hint="Enter Project Cost">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:singleLine="true"
                                    android:id="@+id/costCilent"
                                    android:textColorHint="@color/black"
                                    android:textColor="@color/color_grey"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColorHint="@color/black"
                                app:boxStrokeWidth="0dp"
                                android:backgroundTint="#FAFAFA"
                                app:boxBackgroundColor="#FAFAFA"
                                app:hintTextColor="@color/black"
                                app:boxStrokeColor="@color/primary"
                                android:hint="Enter Starting Date DD/MM/YYYY">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:singleLine="true"
                                    android:focusable="false"
                                    android:id="@+id/dateClient"
                                    android:textColorHint="@color/black"
                                    android:textColor="@color/color_grey"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColorHint="@color/black"
                                app:boxStrokeWidth="0dp"
                                android:backgroundTint="#FAFAFA"
                                app:boxBackgroundColor="#FAFAFA"
                                app:hintTextColor="@color/black"
                                app:boxStrokeColor="@color/primary"
                                android:hint="Enter Deployment Date DD/MM/YYYY">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:singleLine="true"
                                    android:id="@+id/deploymentClient"
                                    android:focusable="false"
                                    android:textColorHint="@color/black"
                                    android:textColor="@color/color_grey"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColorHint="@color/black"
                                app:boxStrokeWidth="0dp"
                                android:backgroundTint="#FAFAFA"
                                app:boxBackgroundColor="#FAFAFA"
                                app:hintTextColor="@color/black"
                                app:boxStrokeColor="@color/primary"
                                android:hint="Project Description*">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:singleLine="true"
                                    android:id="@+id/description"
                                    android:inputType="textMultiLine"
                                    android:lines="3"
                                    android:textColorHint="@color/black"
                                    android:textColor="@color/color_grey"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <Button
                                android:id="@+id/submitClient"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Submit"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:backgroundTint="@color/primary"
                                android:layout_marginBottom="@dimen/_20ssp"
                                android:layout_gravity="center"/>



                        </LinearLayout>
                    </ScrollView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </RelativeLayout>





    </LinearLayout>


</ScrollView>