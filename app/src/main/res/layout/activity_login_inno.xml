<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginInnoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:background="@drawable/shape_layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                     android:layout_width="@dimen/_90sdp"
                     android:layout_height="@dimen/_90sdp"
                     android:src="@drawable/innovaneers"/>

            </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_30sdp"
            app:cardElevation="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/_24sdp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:id="@+id/loginText"
                    android:textSize="@dimen/_25sdp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/primary"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColorHint="@color/black"
                    android:backgroundTint="#FAFAFA"
                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="#FAFAFA"
                    app:hintTextColor="@color/black"
                    app:boxStrokeColor="@color/primary"
                    android:hint="Enter Email ID/ Mobile / Staff ID">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:id="@+id/user_name_login"
                        android:textColorHint="@color/black"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColorHint="@color/black"
                    android:backgroundTint="#FAFAFA"
                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="#FAFAFA"
                    app:hintTextColor="@color/black"
                    app:boxStrokeColor="@color/primary"
                    android:hint="password">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:id="@+id/user_password_login"
                        android:textColorHint="@color/black"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forget_password"
                    android:layout_gravity="right"
                    android:textColorLink="@color/blue"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:id="@+id/login_btn_Login"
                    app:cornerRadius = "@dimen/_20sdp"
                    android:text="Login"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:backgroundTint="@color/primary" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Innovaneers"
                android:textColor="@color/primary"
                android:textSize="@dimen/_13sdp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Technology"
                android:textSize="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/singText"
                android:textColor="@color/primary" />
        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>