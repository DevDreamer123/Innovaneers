<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/mettalic_white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".LeadActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/primary"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_height="@dimen/_200sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_40sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/innovaneers"
                            android:background="@color/white"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="New Lead"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="right"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:textColor="@color/white"/>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardElevation="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_80sdp"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginRight="@dimen/_10ssp"
                    >
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit..."
                            android:textSize="@dimen/_9sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"/>


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textColorHint="@color/black"
                            android:backgroundTint="#FAFAFA"
                            app:boxBackgroundColor="#FAFAFA"
                            app:hintTextColor="@color/black"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeColor="@color/primary"
                            android:hint="Enter Name">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:singleLine="true"
                                android:id="@+id/nameLead"
                                android:textColorHint="@color/black"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content"/>

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textColorHint="@color/black"
                            android:backgroundTint="#FAFAFA"
                            app:boxBackgroundColor="#FAFAFA"
                            app:boxStrokeWidth="0dp"
                            app:hintTextColor="@color/black"
                            app:boxStrokeColor="@color/primary"
                            android:hint="Enter Email">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:singleLine="true"
                                android:id="@+id/emailLeads"
                                android:textColorHint="@color/black"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textColorHint="@color/black"
                            app:boxStrokeWidth="0dp"
                            android:backgroundTint="#FAFAFA"
                            app:boxBackgroundColor="#FAFAFA"
                            app:hintTextColor="@color/black"
                            app:boxStrokeColor="@color/primary"
                            android:hint="Enter Mobile Number">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:singleLine="true"
                                android:id="@+id/mobileLeads"
                                android:textColorHint="@color/black"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content"/>

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:boxStrokeWidth="0dp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textColorHint="@color/black"
                            android:backgroundTint="#FAFAFA"
                            app:boxBackgroundColor="#FAFAFA"
                            app:hintTextColor="@color/black"
                            app:boxStrokeColor="@color/primary"
                            android:hint="Enter Address">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:singleLine="true"
                                android:id="@+id/addressLeads"
                                android:textColorHint="@color/black"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content"/>

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:boxStrokeWidth="0dp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textColorHint="@color/black"
                            android:backgroundTint="#FAFAFA"
                            app:boxBackgroundColor="#FAFAFA"
                            app:hintTextColor="@color/black"
                            app:boxStrokeColor="@color/primary"
                            android:hint="Enter City">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:singleLine="true"
                                android:id="@+id/cityLeads"
                                android:textColorHint="@color/black"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content"/>

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            app:boxStrokeWidth="0dp"
                            android:textColorHint="@color/black"
                            android:backgroundTint="#FAFAFA"
                            app:boxBackgroundColor="#FAFAFA"
                            app:hintTextColor="@color/black"
                            app:boxStrokeColor="@color/primary"
                            android:hint="Enter Lead Type">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:singleLine="true"
                                android:id="@+id/typeLeads"
                                android:textColorHint="@color/black"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content"/>

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textColorHint="@color/black"
                            app:boxStrokeWidth="0dp"
                            android:backgroundTint="#FAFAFA"
                            app:boxBackgroundColor="#FAFAFA"
                            app:hintTextColor="@color/black"
                            app:boxStrokeColor="@color/primary"
                            android:hint="Enter Lead Date">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:singleLine="true"
                                android:id="@+id/dateLeads"
                                android:focusable="false"
                                android:textColorHint="@color/black"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content"/>

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textColorHint="@color/black"
                            android:backgroundTint="#FAFAFA"
                            app:boxStrokeWidth="0dp"
                            app:boxBackgroundColor="#FAFAFA"
                            app:hintTextColor="@color/black"
                            app:boxStrokeColor="@color/primary"
                            android:hint="Remark*">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:singleLine="true"
                                android:id="@+id/remarkLeads"
                                android:inputType="textMultiLine"
                                android:lines="3"
                                android:textColorHint="@color/black"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content"/>

                        </com.google.android.material.textfield.TextInputLayout>

                            <Button
                                 android:id="@+id/set_notification_btn"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:drawableLeft="@drawable/baseline_circle_notifications_24"
                                 android:text="Set Notification"
                                 android:backgroundTint="@color/primary"
                                 android:layout_gravity="right"
                                 android:layout_marginRight="@dimen/_10sdp"
                                 android:layout_marginTop="@dimen/_10sdp"/>
                        <Button
                            android:id="@+id/submitLeads"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Submit"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:backgroundTint="@color/primary"
                            android:layout_marginBottom="@dimen/_20ssp"
                            android:layout_gravity="center"/>



                    </LinearLayout>
        </ScrollView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </RelativeLayout>





    </LinearLayout>


</ScrollView>