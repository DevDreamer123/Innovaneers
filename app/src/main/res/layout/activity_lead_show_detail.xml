<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/mettalic_white"
    android:layout_height="match_parent"
    tools:context=".LeadShowDetailActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="@dimen/_40sdp"
           android:textColor="@color/white"
           android:textSize="@dimen/_18sdp"
           android:gravity="center"
           android:textStyle="bold"
           android:background="@color/primary"
           android:text="Lead Detail"/>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_marginTop="@dimen/_5sdp"
           android:layout_marginRight="@dimen/_5sdp"
           android:layout_marginBottom="@dimen/_5sdp"
           android:layout_marginLeft="@dimen/_5sdp"
           android:elevation="@dimen/_5sdp"
           app:cardElevation="@dimen/_5sdp"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <TextView
                   android:id="@+id/detail_lead"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:drawableRight="@drawable/ic_baseline_auto_awesome_mosaic_24_red"
                   android:text="Detail"
                   android:textStyle="bold"
                   android:paddingRight="@dimen/_40sdp"
                   android:layout_marginLeft="@dimen/_5sdp"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:textSize="@dimen/_11sdp"/>



               <TextView
                   android:id="@+id/name_lead"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Name"
                   android:layout_marginLeft="@dimen/_5sdp"
                   android:textStyle="bold"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:textSize="@dimen/_11sdp"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/_10sdp"
                   android:orientation="horizontal">


                   <TextView
                       android:id="@+id/mobile_lead"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="+91 XXXX XXXX XX"
                       android:layout_marginLeft="@dimen/_5sdp"
                       android:layout_marginTop="@dimen/_5sdp"
                       android:textStyle="bold"
                       android:textSize="@dimen/_11sdp"/>



                   <TextView
                       android:id="@+id/status"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Status"
                       android:textStyle="bold"
                       android:layout_marginLeft="@dimen/_130sdp"
                       android:textSize="@dimen/_11sdp"/>

               </LinearLayout>
           </LinearLayout>
       </androidx.cardview.widget.CardView>


       <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Schedule"
                    android:textStyle="bold"
                    android:textSize="@dimen/_20sdp"
                    android:gravity="center"/>
           <Button
               android:id="@+id/set_notification_Lead_btn"
               android:layout_width="wrap_content"
               android:visibility="gone"
               android:layout_height="wrap_content"
               android:drawableLeft="@drawable/baseline_circle_notifications_24"
               android:text="Set Notification"
               android:backgroundTint="@color/primary"
               android:layout_gravity="right"
               android:layout_marginRight="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_10sdp"/>
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@android:drawable/btn_dropdown"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date :"
                android:textSize="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textStyle="bold"/>

           <EditText
               android:id="@+id/editText1"
               android:layout_width="match_parent"
               android:paddingLeft="@dimen/_10sdp"
               android:padding="@dimen/_5sdp"
               android:layout_marginLeft="@dimen/_10sdp"
               android:layout_marginRight="@dimen/_10sdp"
               android:background="@drawable/form_backround_layout"
               android:layout_height="wrap_content"
               android:hint="date dd/mm/yyyy" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail :"
                android:textSize="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"

                android:textStyle="bold"/>
            <EditText
                android:id="@+id/descriptionform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Say..........."
                android:padding="@dimen/_5sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:background="@drawable/form_backround_layout"
                android:textSize="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp" />



                <Button
                    android:id="@+id/submit_lead_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:backgroundTint="@color/primary"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>



            </LinearLayout>

